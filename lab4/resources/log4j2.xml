<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
		<Property name="log.dir">logs</Property>
	</Properties>

	<Appenders>
		<RollingFile name="roll.file.log" fileName="${log.dir}/lab4.log" filePattern="${log.dir}/lab4-%d{yyyy-MM-dd}.log">
			<PatternLayout>
				<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			</Policies>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="default_logger" level="info" additivity="false">
			<AppenderRef ref="roll.file.log"/>
		</Logger>
		<Root level="fatal">
			<AppenderRef ref="roll.file.log"/>
		</Root>
	</Loggers>
</Configuration>
